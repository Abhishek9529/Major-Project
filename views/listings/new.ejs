<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create new listing</h3>
            <form action="/listings" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">
                        Title
                        <input class="form-control" id="title" type="text" placeholder="title" name="listing[title]" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Title should be valid</div>
                    </label>
                    
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">
                        Description
                        <textarea class="form-control" id="description" type="text" placeholder="description"
                            name="listing[description]" required> Enter description here</textarea>
                            <div class="invalid-feedback">Please enter a short description</div>
                        </label>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">
                        Price
                        <input class="form-control" id="price" placeholder="price" name="listing[price]" required>
                        <div class="invalid-feedback">Price should be valid </div>
                    </label>
                </div>
                <div class="mb-3">
                    <label for="imgUrl" class="form-label">
                        Image Url
                        <input class="form-control" id="imgUrl" type="text" placeholder="img url" name="listing[image]">
                    </label>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">
                        Location
                        <input class="form-control" id="location" type="text" placeholder="location"
                            name="listing[location]" required>
                            <div class="invalid-feedback">Location should be valid</div>
                        </label>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">
                        Country
                        <input class="form-control" id="country" type="text" placeholder="country"
                            name="listing[country]" required>
                            <div class="invalid-feedback">Country name should be valid</div>
                        </label>
                </div>
                <button class="btn btn-dark new-btn">Submit</button>
            </form>

        </div>
    </div>